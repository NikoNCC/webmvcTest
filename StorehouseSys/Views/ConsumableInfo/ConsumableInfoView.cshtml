@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="../layuimini/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="../layuimini/css/public.css" media="all">
</head>
<body>
    <div class="layuimini-container">
        <div class="layuimini-main">

            <fieldset class="table-search-fieldset">
                <legend>搜索信息</legend>
                <div style="margin: 10px 10px 10px 10px">
                    <form class="layui-form layui-form-pane" action="">
                        <div class="layui-form-item">
                            <div class="layui-inline">
                                <label class="layui-form-label">耗材名</label>
                                <div class="layui-input-inline">
                                    <input type="text" name="ConsumableName" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <button type="submit" class="layui-btn layui-btn-primary" lay-submit lay-filter="data-search-btn"><i class="layui-icon"></i> 搜 索</button>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>

            <script type="text/html" id="toolbarDemo">
                <div class="layui-btn-container">
                    <button class="layui-btn layui-btn-normal layui-btn-sm data-add-btn" lay-event="add"> 添加 </button>
                    <button class="layui-btn layui-btn-sm layui-btn-danger data-delete-btn" lay-event="delete"> 删除 </button>
                    <button class="layui-btn layui-btn-sm" id="importBtn"> 入库 </button>
                    <button class="layui-btn layui-btn-sm" id="exportBtn"> 导出 </button>
                </div>
            </script>

            <table class="layui-hide" id="currentTableId" lay-filter="currentTableFilter"></table>

            <script type="text/html" id="currentTableBar">
                <a class="layui-btn layui-btn-normal layui-btn-xs data-count-edit" lay-event="edit">编辑</a>
                <a class="layui-btn layui-btn-xs layui-btn-danger data-count-delete" lay-event="delete">删除</a>
            </script>

        </div>
    </div>
    <script src="~/layui/layui.js" charset="utf-8"></script>
    
    <script>
        var table;

        layui.use(['form', 'table', 'upload'], function () {
            var $ = layui.jquery,
                form = layui.form;
            table = layui.table;
            var upload = layui.upload;
            

            table.render({
                elem: '#currentTableId',
                url: '/ConsumableInfo/GetConsumableInfos',
                toolbar: '#toolbarDemo',
                defaultToolbar: ['filter', 'exports', 'print', {
                    title: '提示',
                    layEvent: 'LAYTABLE_TIPS',
                    icon: 'layui-icon-tips'
                }],
                cols: [[
                    { type: "checkbox", width: 50 },
                    { field: 'id', title: 'ID', hide: true, sort: true },
                    { field: 'consumableName', minWidth: 80, title: '耗材名' },
                    { field: 'description', minWidth: 150, title: '描述', sort: true },
                    { field: 'specification', minWidth: 150, title: '耗材规格' },
                    { field: 'num', minWidth: 150, title: '库存数量' },
                    { field: 'unit', title: '单位', minWidth: 150 },
                    { field: 'money', minWidth: 80, title: '价格', sort: true },
                    { field: 'warningNum', minWidth: 80, title: '警告库存', sort: true },
                    { field: 'createTime', title: '创建时间', sort: true },
                    { title: '操作', minWidth: 150, toolbar: '#currentTableBar', align: "center" }
                ]],
                limits: [10, 15, 20, 25, 50, 100],
                limit: 10,
                page: true,
                skin: 'line',
                id: "currentTableId"
            });

            //导出按钮点击事件
            $('#exportBtn').click(function () {
                //文件下载
                window.location = "/ConsumableInfo/DownLoad";
            });


            //执行实例
            var uploadInst = upload.render({
                elem: '#importBtn' //绑定元素
                , url: '/ConsumableInfo/Upload' //上传接口
                , accept: 'file'
                , field: 'formFile'
                , done: function (res) {
                    //上传完毕回调
                    layer.msg(res.msg);
                    table.reloadData('currentTableId', {
                        page: {
                            curr: 1
                        }
                        , where: {
                        }
                    }, 'data');

                }
                , error: function () {
                    //请求异常回调
                }
            });

            // 监听搜索操作
            form.on('submit(data-search-btn)', function (data) {

                console.log(data);

                //执行搜索重载
                table.reload('currentTableId', {
                    page: {
                        curr: 1
                    }
                    , where: {
                        consumableInfoName: data.field.ConsumableName
                    }
                }, 'data');

                return false;
            });

            /**
             * toolbar监听事件
             */
            table.on('toolbar(currentTableFilter)', function (obj) {
                if (obj.event === 'add') {  // 监听添加操作
                    var index = layer.open({
                        title: '添加耗材',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['100%', '100%'],
                        content: '/ConsumableInfo/AddConsumableInfoView',
                    });
                    $(window).on("resize", function () {
                        layer.full(index);
                    });
                } else if (obj.event === 'delete') {  // 监听删除操作
                    var checkStatus = table.checkStatus('currentTableId')
                        , data = checkStatus.data;
                    /* layer.alert(JSON.stringify(data));*/
                    //console.log(data);

                    //获取耗材的id数组
                    var ids = [];
                    for (var i = 0; i < data.length; i++) {
                        ids.push(data[i].id);
                    }

                    //发起异步请求批量删除耗材
                    $.ajax({
                        url: '/ConsumableInfo/DeleteConsumableInfo',
                        type: 'post',
                        data: {
                            ids: ids
                        },
                        success: function (res) {
                            if (res.isSuccess) {
                                //刷新列表
                                table.reload('currentTableId', {
                                    page: {
                                        curr: 1
                                    }
                                    , where: {
                                    }
                                }, 'data');
                            } else {
                                layer.msg(res.msg);
                            }
                        }
                    });

                } else if (obj.event === 'import') {  // 监听入库操作


                }
            });

            //监听表格复选框选择
            table.on('checkbox(currentTableFilter)', function (obj) {
                console.log(obj)
            });

            table.on('tool(currentTableFilter)', function (obj) {
                var data = obj.data;
                if (obj.event === 'edit') {

                    //把当前点击的耗材id保存在sessionStorage中
                    sessionStorage.setItem('id', data.id);

                    var index = layer.open({
                        title: '编辑耗材',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['100%', '100%'],
                        content: '/ConsumableInfo/UpdateConsumableInfoView?id=' + data.id,

                    });
                    $(window).on("resize", function () {
                        layer.full(index);
                    });
                    return false;
                } else if (obj.event === 'delete') {
                    layer.confirm('真的删除行么', function (index) {
                        //发起异步请求软删除耗材信息
                        $.ajax({
                            url: '/ConsumableInfo/DeleteConsumableInfo',
                            type: 'post',
                            data: {
                                id: data.id
                            },
                            success: function (res) {
                                if (res.isSuccess) {
                                    obj.del();
                                    layer.close(index);
                                }
                            }
                        });


                    });
                }
            });

        });</script>

</body>
</html>