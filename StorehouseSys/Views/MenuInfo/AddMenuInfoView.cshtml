                //});

                //监听提交
                form.on('submit(saveBtn)', function (data) {

                    $.ajax({
                        url: "/MenuInfo/AddMenuInfo",
                        type: "post",
                        data: data.field,
                        success: function (res) {

                            if (res.ses) {
                                //关闭当前编辑页
                                var iframeIndex = parent.layer.getFrameIndex(window.name);
                                parent.layer.close(iframeIndex);
                                //刷新列表
                                parent.table.reload('testReload', {
                                    page: {
                                        curr: 1
                                    }
                                    , where: {
                                    }
                                }, 'data');

                            } else {
                                layer.msg(res.msg);
                            }


                        }
                    });
                });

            });
        </script>
</body>
